<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shonarbangla.helpclick.settings_page"
    tools:showIn="@layout/activity_settings_page">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#455A64"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:weightSum="1"
        android:id="@+id/information">

        <TextView
            android:text="My Emergency Number"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF8A65"
            android:textSize="24sp"
            android:padding="5dp"
            android:textStyle="normal|bold|italic"
            android:fontFamily="serif"

            />

    </LinearLayout>




      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="#69F0AE"
          android:background="@drawable/list_selector"
          android:padding="10dp"

          android:text="My Emergency number is:"
          android:layout_gravity="center"
          android:textSize="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - - - - - - - - - -"
            android:textColor="#69F0AE"
            android:id="@+id/setnum"
            android:scrollbarSize="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/list_selector"
            android:textSize="20dp"/>

        <EditText

            android:id="@+id/editnum"
            android:hint=" Change My Emergency Number "
            android:textColorHint="#ffffff"

            android:background="@drawable/list_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:inputType= "number"
            android:textCursorDrawable="@null"
            android:textColor="#69F0AE"
            android:layout_marginTop="15dp"/>





    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="15dp"
        android:id="@+id/updateshona"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#69F0AE"
        android:background="@drawable/list_selector"
         />




    </LinearLayout>

</RelativeLayout>
