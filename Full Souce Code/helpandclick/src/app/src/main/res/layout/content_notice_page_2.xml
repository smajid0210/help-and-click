<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_notice_page_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#263238"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shonarbangla.helpclick.notice_page_2"
    tools:showIn="@layout/activity_notice_page_2">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">





            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#455A64"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    android:weightSum="1"
                    android:id="@+id/information">

                    <TextView
                        android:text="Information"
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:textSize="24sp"
                        android:padding="5dp"
                        android:textStyle="normal|bold|italic"
                        android:fontFamily="serif"

                        android:textColor="#FF8A65"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:background="@drawable/border">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">


                        <TextView
                            android:text="Name*"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />

                        <EditText
                            android:hint=" Name of the person "
                            android:textColorHint="#ffffff"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:layout_gravity="center"
                            android:id="@+id/Name"
                            android:textSize="16sp"
                            android:textCursorDrawable="@null"
                            android:textColor="#ffffff"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">

                        <TextView
                            android:text="Age*"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textSize="16sp"
                            android:layout_alignParentLeft="true"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textStyle="normal|bold" />

                        <Spinner
                            android:id="@+id/age11"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textView10"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"

                            >
                        </Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">


                        <TextView
                            android:text="Gender*"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:textSize="16sp"
                            android:layout_alignParentLeft="true"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textStyle="normal|bold" />

                        <Spinner
                            android:id="@+id/spinner11"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textView9"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"

                            >

                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">



                        <TextView
                            android:text="Occupation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />

                        <EditText
                            android:hint=" Student/Businessman/Service holder etc "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType= "textMultiLine"
                            android:layout_gravity="center"
                            android:textColorHint="#ffffff"

                            android:id="@+id/appearance"
                            android:textSize="16sp"
                            android:textCursorDrawable="@null"
                            android:textColor="#ffffff" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:textColor="#69F0AE"
                            android:textColorHint="#ffffff"
                            android:text="@string/date_button_set"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/textView33"
                            android:onClick="setDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/button1"
                            android:layout_below="@+id/textView2"
                            android:layout_gravity="center"
                            android:hint="Missing Date"

                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">



                        <TextView
                            android:text="Last Seen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />


                        <EditText
                            android:hint=" Location "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:id="@+id/location11"
                            android:textColorHint="#ffffff"
                            android:textSize="16sp"
                            android:inputType= "textMultiLine"
                            android:textCursorDrawable="@null"
                            android:textColor="#ffffff"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">

                        <TextView
                            android:text="Last Appearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />

                        <EditText
                            android:hint=" Dress/look/identity Mark etc "
                            android:textColorHint="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType= "textMultiLine"
                            android:layout_gravity="center"
                            android:id="@+id/app"

                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:textCursorDrawable="@null"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">

                        <TextView
                            android:text="Contact Info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />

                        <EditText
                            android:hint=" Address/ Contact number "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType= "textMultiLine"
                            android:layout_gravity="center"
                            android:id="@+id/contact11"
                            android:textColorHint="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:textCursorDrawable="@null"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/list_selector"
                        android:paddingTop="5dp">

                        <TextView
                            android:text="Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:textColor="#69F0AE"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />

                        <EditText
                            android:hint=" Habbit/language/hair color/special notes etc "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType= "textMultiLine"
                            android:layout_gravity="center"
                            android:id="@+id/add"
                            android:textSize="16sp"
                            android:textColorHint="#ffffff"
                            android:textStyle="italic"
                            android:textCursorDrawable="@null"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                    <Button
                        android:text="Upload notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/upload_notice"
                        android:textColor="#ffffff"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/textView4"
                        android:layout_alignStart="@+id/textView4"
                        android:layout_gravity="right"
                        android:background="@drawable/list_selector"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="normal|bold"
                        android:textAllCaps="false" />






                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>
