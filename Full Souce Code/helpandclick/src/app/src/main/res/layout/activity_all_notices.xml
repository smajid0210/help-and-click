<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    android:fitsSystemWindows="true"
    tools:context="shonarbangla.helpclick.all_notices">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_all_notices" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"

        android:background="#263238">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#455A64"
            android:layout_marginBottom="10dp"
            android:weightSum="1"
            android:id="@+id/information"
            >

            <TextView
                android:text="All Notices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FF8A65"
                android:id="@+id/textView4"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:fontFamily="serif"
                />

        </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="1"
            android:background="@drawable/list_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_weight="0.5"
                android:textColor="#69F0AE"
                android:drawableRight="@android:drawable/ic_menu_view"
                android:gravity="center"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spinner_notices_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:layout_weight="0.5">
            </Spinner>

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/list_selector">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="#69F0AE"
                android:gravity="center"
                android:layout_weight="0.5"
                android:drawableRight="@android:drawable/ic_menu_view"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spinner_notices_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:layout_weight="0.5">
            </Spinner>

        </LinearLayout>





            <Button

                android:id="@+id/button_all_notices"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#69F0AE"
                android:textSize="14sp"
                android:background="@drawable/list_selector"

                android:drawableLeft="@android:drawable/ic_menu_search"

                android:text="Search"
                android:layout_gravity="right"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                 />
        </LinearLayout>









        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp">
        </ListView>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
