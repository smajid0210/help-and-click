<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_in_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shonarbangla.helpclick.Sign_in_page"
    tools:showIn="@layout/activity_sign_in_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/oklogo"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center"
                    android:paddingTop="25dp"
                    />
            </LinearLayout>


            <EditText
                android:hint=" Username "
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textCursorDrawable="@null"
                android:gravity="center"
                android:id="@+id/txtUsername"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColorHint="#BDBDBD"
                android:textColor="#ffffff"

                android:ems="10"
                android:popupBackground="#cccccc"


                />

            <EditText
                android:hint=" Password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:popupBackground="#cccccc"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/txtPassword"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColorHint="#BDBDBD"
                android:textColor="#ffffff"
                android:paddingTop="20dp"
                />



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="40dp"

                >

                <Button android:id="@+id/sign_in_button_click"
                    android:text="Sign In"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple"
                    android:textColor="#69F0AE"
                    android:textSize="14sp"


                    />
            </LinearLayout>






        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
